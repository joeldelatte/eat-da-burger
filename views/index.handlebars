<div class="container">
  <div class="row jumbotron justify-content-center">
    <h1>Burgers</h1>
    <img src="../../public/assets/img/burger.jpg" alt="any string at all!" id="burg-img"/>
  </div>
<div clas="row justify-content-center">
  <div class="card">
    <h2>Burgers you gotta try:</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="card">
    <h2>Burgers you've devoured:</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
  <div class="row justify-content-center">
    <h2>Add a Burger!</h2>
  </div>
  <div class="row justify-content-center">
  <form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Have you tried the burger you're adding before?</label><br>
    <input type="radio" name="hungry" value="1" checked> I've devoured this burger<br>
    <input type="radio" name="hungry" value="0"> I gotta try it
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>